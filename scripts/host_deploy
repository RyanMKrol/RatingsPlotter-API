AES_PASS=$1

cd ~
rm -rf RatingsPlotter-API
git clone https://github.com/RyanMKrol/RatingsPlotter-API.git
cd RatingsPlotter-API
openssl aes-256-cbc -d -a -in credentials/omdbConfig.json.enc -out credentials/omdbConfig.json -k $AES_PASS
git pull
npm install
npm run build
pm2 delete RatingsPlotter-API
pm2 start build/bin/www.js --name RatingsPlotter-API
pm2 save
